{
    "name": "dakala/phpedu-project",
    "description": "Project template for Drupal 8 sites built with the PhpEdu distribution.",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Deji Akala",
            "email": "dejiakala@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "@composer drupal:scaffold"
        ]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "docroot/"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/phpedu": [
                "dakala/phpedu_profile"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true
    },
    "require": {
        "drupal/core-composer-scaffold": "~8.8.1",
        "cweagans/composer-patches": "^1.6.0",
        "drupal/phpedu_profile": "dev-1.x",
        "drupal/core": "~8.4.0"
    },
    "require-dev": {
        "drupal/drupal-extension": "~3.3.0",
        "drupal/coder": "8.*",
        "phpunit/phpunit": "~4.8"
    }
}
